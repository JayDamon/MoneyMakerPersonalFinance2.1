<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane fx:id="primaryPane" prefHeight="324.0" prefWidth="474.0" style="-fx-background-color: #88ABCA;"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.moneymaker.main.LoginWindowController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <Label layoutX="6.0" layoutY="7.0" prefHeight="50.0" prefWidth="241.0" style="-fx-font-weight: Bold;"
           text="Money Maker" textFill="WHITE">
        <font>
            <Font size="34.0"/>
        </font>
    </Label>
    <Label contentDisplay="CENTER" layoutX="32.0" layoutY="46.0" prefHeight="38.0" prefWidth="209.0"
           style="-fx-font-weight: bold;" text="Budget Builder" textAlignment="CENTER" textFill="WHITE">
        <font>
            <Font size="21.0"/>
        </font>
    </Label>
    <Label contentDisplay="CENTER" layoutX="73.0" layoutY="98.0" prefHeight="38.0" prefWidth="106.0"
           style="-fx-font-weight: bold;" text="User Login" textAlignment="CENTER" textFill="WHITE"
           GridPane.rowIndex="1">
        <font>
            <Font size="21.0"/>
        </font>
    </Label>
    <Label layoutX="126.0" layoutY="163.0" prefHeight="38.0" prefWidth="77.0" style="-fx-font-weight: bold;"
           text="Username:" textFill="WHITE" GridPane.rowIndex="2">
        <font>
            <Font size="15.0"/>
        </font>
    </Label>
    <Label layoutX="126.0" layoutY="195.0" prefHeight="38.0" prefWidth="77.0" style="-fx-font-weight: bold;"
           text="Password:" textFill="WHITE" GridPane.rowIndex="3">
        <font>
            <Font size="15.0"/>
        </font>
    </Label>
    <TextField fx:id="textFieldUsername" layoutX="212.0" layoutY="170.0" prefHeight="25.0" prefWidth="184.0"
               GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <PasswordField fx:id="passwordFieldLogin" layoutX="212.0" layoutY="202.0" prefHeight="25.0" prefWidth="184.0"
                   GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Button fx:id="buttonLogin" layoutX="126.0" layoutY="286.0" mnemonicParsing="false" onAction="#loginAction" prefHeight="25.0"
            prefWidth="128.0" text="Login" GridPane.rowIndex="4"/>
    <Button layoutX="267.0" layoutY="286.0" mnemonicParsing="false" onAction="#newUser" prefHeight="25.0"
            prefWidth="128.0" text="New User" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <Label fx:id="invalidField" layoutX="125.0" layoutY="136.0" prefHeight="25.0" prefWidth="270.0"
           style="-fx-text-background-color: red; -fx-font-size: 15.0"/>
    <CheckBox fx:id="checkBoxSaveCredentials" layoutX="125.0" layoutY="233.0" mnemonicParsing="false"
              text="Save Username"/>
    <CheckBox fx:id="checkBoxAutoLogin" layoutX="125.0" layoutY="260.0" mnemonicParsing="false"
              text="Automatically login at launch"/>
    <Button fx:id="testUser"  layoutX="21.0" layoutY="256.0" mnemonicParsing="false" text="TestUser"/>
</AnchorPane>
